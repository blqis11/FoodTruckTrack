<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Back Arrow and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:tint="@color/soft_brown_dark"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="#4E342E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:contentDescription="App Logo"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet the Developers"
            android:textColor="#6D4C41"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Author 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFE0B2"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/author1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_bg" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nur Fatin Syamimi Binti Muhammad Salahuddin\nMatric: 2023116159\nCourse: CDCS240"
                android:textColor="#4E342E"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Author 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFE0B2"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/author2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_bg" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nurul Izzah Binti Burhan\nMatric: 2023503023\nCourse: CDCS240"
                android:textColor="#4E342E"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Author 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFE0B2"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/author3"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_bg" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nurul Balqis Binti Badrul Hisham\nMatric: 2023510127\nCourse: CDCS240"
                android:textColor="#4E342E"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Author 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFE0B2"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/author4"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_bg" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ummu Nasuha Binti Mohd Suffian\nMatric: 2023103117\nCourse: CDCS240"
                android:textColor="#4E342E"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- GitHub Link (no icon) -->
        <TextView
            android:id="@+id/githubLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Git: https://github.com/blqis11/FoodTruckTrack.git"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            android:autoLink="web"
            android:linksClickable="true"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="start" />

    </LinearLayout>
</ScrollView>
