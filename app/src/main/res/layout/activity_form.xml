<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/soft_brown_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Header with Back Arrow and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:tint="@color/soft_brown_dark"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Add Food Truck"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/soft_brown_dark" />
        </LinearLayout>

        <!-- Input Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@color/soft_brown_light"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Food Truck Name"
                android:minHeight="56dp"
                android:padding="14dp"
                android:textColor="@color/soft_brown_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Type (e.g., Coffee, BBQ)"
                android:minHeight="56dp"
                android:padding="14dp"
                android:textColor="@color/soft_brown_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Location Description"
                android:minHeight="56dp"
                android:padding="14dp"
                android:textColor="@color/soft_brown_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etLat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Latitude"
                android:inputType="numberDecimal"
                android:minHeight="56dp"
                android:padding="14dp"
                android:textColor="@color/soft_brown_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etLng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Longitude"
                android:inputType="numberDecimal"
                android:minHeight="56dp"
                android:padding="14dp"
                android:textColor="@color/soft_brown_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etReporter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Reported By"
                android:minHeight="56dp"
                android:padding="14dp"
                android:textColor="@color/soft_brown_dark"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnSubmitTruck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/soft_brown_dark"
                android:elevation="8dp"
                android:padding="16dp"
                android:text="Submit Truck Info"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Existing Truck List -->
        <LinearLayout
            android:id="@+id/llTruckList"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp" />
    </LinearLayout>
</ScrollView>
